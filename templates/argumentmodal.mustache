{{!
    @template tiny_filtercodes/argument_modal

    Example context (json):
    {
        "description": "html",
        "args": [
            {
                "id": "arg-0",
                "label": "groupidnumber",
                "html": "html"
            }
        ]
    }
}}
<div>
    {{#args}}
        <div class="form-item row mb-3">
            <div class="form-label col-sm-5 text-sm-end">
                <label for="{{id}}">{{label}}</label>
            </div>
            <div class="form-setting col-sm-6">
                {{{html}}}
            </div>
        </div>
    {{/args}}
    <hr>
    <span class="info">{{{description}}}</span>
    <hr>
    <span class="info">{{#str}}filtercodes:argumentmodal:info, tiny_filtercodes{{/str}}</span>
</div>