{{!
    @template tiny_filtercodes/select

    Select.

    Context variables required for this template:
    * name - element name
    * id - element id
    * options - choices

    Example context (json):
    {
        "name": "name0",
        "id": "id0",
        "options": [{
            "value": "1",
            "text": "option 1",
            "selected": true,
            "disabled": false
        }]
    }
}}
{{!
    Setting autocomplete.
}}

<div class="form-select defaultsnext">
    <select name="{{name}}[]"
            id="{{id}}"
            class="custom-select">
        {{#options}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{{text}}}</option>
        {{/options}}
    </select>
</div>
