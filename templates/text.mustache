{{!
    @template tiny_filtercodes/text

    Textbox complete.

    Context variables required for this template:
    * name - element name
    * id - element id

    Example context (json):
    {
        "name": "name0",
        "id": "id0",
        "value": "value",
        "placeholder": "placeholder"
    }
}}

<div class="form-text">
    <input type="text"
           name="{{name}}"
           id="{{id}}"
           value="{{#value}}{{value}}{{/value}}"
           placeholder="{{#placeholder}}{{placeholder}}{{/placeholder}}"
           class="form-control" />
</div>
